<div>
  <div>
    <h1>Diary</h1>
  </div>
  <div class = "addentry">
    <a href="/addentry" type="button"> + add entry </a>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th> id </th>
      <th> Date </th>
      <th> Feeling </th>
      <th> Diary </th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th >{{this.id}}</th>
      <td>{{this.date}}</td>
      <td>{{this.feeling}}</td>
      <td>{{this.diary}}</td>
      <td class="text-end">
        <a href="/viewentry/{{this.id}}" type="button" ><i></i> View</a>
        <a href="/editentry/{{this.id}}" type="button" ><i ></i> Edit</a>
        <a href="/{{this.id}}" type="button" ><i ></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>